
<% include partials/head.ejs %>
<% if(session.user !== undefined) {%>
  <div class="steve-container well well-sm">
    <div class="steve-row">
        <div class="steve-col">
            <h1>Enter your options below!</h1>
        </div>
    </div>
    <div class="steve-row">
      <form name="match-submit" action="/submitQuestion" method="POST">
        <input class="steve-col" maxlength="50" type="text" name="question" placeholder="Enter your question" required>
        <div id="options">
          <div>
            <input class="steve-col" maxlength="25" type="text" name="answer1" placeholder="Option" required>
          </div>
          <div>
            <input class="steve-col" maxlength="25" type="text" name="answer2" placeholder="Option" required>
          </div>
        </div>
        <button class="steve-col btn btn-success" type="submit" value="Submit">Submit</button>
        <div id="add-option" class="steve-col btn btn-info">Add Option</div>
      </form>

    </div>
</div>
<% } else { %>
  <div><h2>Sorry! Please <a href="/login">login</a> first to create a new grudge match!</h2></div>
<%}%>
  <script src="create_match.js"></script>
  <% include partials/footer.ejs %>
